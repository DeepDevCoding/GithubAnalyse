<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorTransparent</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>
    <!--分割线-->
    <style name="CutLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@color/colorLightGray</item>
    </style>
    <!--CodeDetailActivity背景透明样式-->
    <style name="CodeDetailActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGreenDeep</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorAccent">@color/colorGreenDeep</item>
    </style>

    <style name="float_button_style">
        <item name="android:background">@drawable/fab_text_background</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popwindow_still</item>
        <item name="android:windowExitAnimation">@anim/popwindow_still</item>
    </style>

</resources>
